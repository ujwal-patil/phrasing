<% if flash[:alert].present? %>
	<div class="alert alert-danger">
	    <%= flash[:alert] %>
	</div>
<% end %>
<% if flash[:notice].present? %>
	<div class="alert alert-success">
	    <%= flash[:notice] %>
	</div>
<% end %>

<div class="alert alert-danger" id="progress-message" style="display: none;"></div>
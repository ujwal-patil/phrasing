- if can_edit_phrases?
  .text-options#zenpenbubble
    .options
      %span.no-overflow
        %span.lengthen.ui-inputs 
          %button.url.useicons &#xe005;
          %input.url-input{placeholder: "Type or Paste URL here", type: "text"}/
          %button.bold b
          %button.italic i





  #phrasing-edit-mode-bubble
    #phrasing-edit-mode
      #phrasing-edit-mode-headline
        %p Edit
      #phrasing-onoffswitch
        .onoffswitch
          %input#edit-mode-onoffswitch.onoffswitch-checkbox{checked: "checked", name: "onoffswitch", type: "checkbox"}/
          %label.onoffswitch-label{for: "edit-mode-onoffswitch"}
            .onoffswitch-inner
            .onoffswitch-switch
    #phrasing-saved-status
      #phrasing-saved-status-headline
        %p Saved
      #phrasing-saved-status-indicator
        #phrasing-saved-status-indicator-circle
    #phrasing-edit-all-phrases
      #phrasing-edit-all-phrases-headline
        %p Edit all
      #phrasing-edit-all-phrases-icon-container
        = link_to image_tag("phrasing_icon_edit_all.png", class: 'phrasing-edit-all-phrases-icon'), phrasing_phrases_path, data: { no_turbolink: true }, class: "phrasing-edit-all-phrases-link"
    - if Phrasing.editable_meta_enable
      #phrasing-edit-this-page-meta
        #phrasing-edit-this-page-meta-headline
          %p Meta
        #phrasing-edit-this-page-meta-icon-container
          = link_to image_tag("phrasing_icon_edit_all.png", class: 'phrasing-edit-this-page-meta-icon'), edit_meta_path, data: { no_turbolink: true }, class: "phrasing-edit-this-page-meta-link"